@{
    Layout = "_AdminLayout";
  
}
<h3>Category</h3>

<div class="container">
    <div class="row justify-content-end">
        <div class="col-sm-4">
            <button type="button" class="btn btn-primary btn-lg" id="btn_add_form" data-toggle="modal" data-target="#modelId">
            Add Category
            </button>
        </div>
    </div>
   <table class="table table-striped table-inverse table-responsive">
    <thead class="thead-inverse">
        <tr>
            <th>#</th>
            <th>Category name</th>
            <th>Create date</th>
            <th> Handle</th>
        </tr>
        </thead>
        <tbody id="data_table">
            @foreach(var item in ViewBag.Categories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CreateDate</td>
                    <td>
                        <a href="" class="btn btn-success">Update</a>
                         <button class="btn btn-danger" onclick="DeteteById(@item.Id)">Delete</button>
                    </td>
                </tr>
            }

        </tbody>
   </table>
</div>
<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Category</h5>
                   <button type="button" class="btn close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                  <label for="">Category name</label>
                  <input type="text"
                    class="form-control" name="" id="categoryName" aria-describedby="helpId" placeholder="">
                  <small id="helpId" class="form-text text-muted">Require</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="SaveChanges()">Save</button>
            </div>
        </div>
    </div>
</div>
<script>
    const SaveChanges = ()=>{
        let categoryName = document.querySelector("#categoryName").value;
        fetch("/Admin/Category/Add",
        {method:"POST",headers:{
            "Content-Type":"application/json"
        },body:JSON.stringify({
            Name:categoryName
        })})
        .then(rs=>{
            if(rs.status==200){
                alert("Add Success");
                location.reload();
            }else{
                alert("Add fail");
            }
        })
    }
    document.querySelector("#btn_add_form").addEventListener("click",(event)=>{
           $("#modelId").modal("show")
    });
    const DeteteById = (id)=>{
        fetch("/Admin/Category/DeleteById?id="+id,{method:"DELETE"})
        .then(rs=>{
            if(rs.status==200){
                alert("Delete Success");
                location.reload();
            }else{
                alert("Delete fail");
            }
        })
    }
</script>